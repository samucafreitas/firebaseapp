<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="20dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/question_1"
            android:textColor="@color/perguntas"
            android:textSize="15sp" />

        <RadioGroup
            android:id="@+id/radioQuestao1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp">

            <RadioButton
                android:id="@+id/resposta1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/discordo_totalmente"
                android:textColor="@color/colorTexts"
                android:buttonTint="@color/colorTexts"/>

            <RadioButton
                android:id="@+id/resposta2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/concordo_um_pouco"
                android:textColor="@color/colorTexts"
                android:buttonTint="@color/colorTexts"/>

            <RadioButton
                android:id="@+id/resposta3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/concordo_totalmente"
                android:textColor="@color/colorTexts"
                android:buttonTint="@color/colorTexts"/>

        </RadioGroup>

        <android.support.design.button.MaterialButton
            android:id="@+id/btnUm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|center_horizontal"
            android:layout_marginHorizontal="30dp"
            android:baselineAligned="false"
            android:text="@string/res_responder"
            app:cornerRadius="15dp"/>

    </LinearLayout>
</FrameLayout>