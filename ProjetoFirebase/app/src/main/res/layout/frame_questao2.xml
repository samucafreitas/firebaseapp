<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="5dp"
            android:text="@string/question_2"
            android:textColor="@color/perguntas"
            android:textSize="15sp" />

        <RadioGroup
            android:id="@+id/radioQuestao2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp">

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pampa"
                android:textColor="@color/colorTexts"
                android:buttonTint="@color/colorAccent"/>

            <RadioButton
                android:id="@+id/resposta2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mata Atlântica"
                android:textColor="@color/colorTexts"
                android:buttonTint="@color/colorAccent"/>

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cerrado"
                android:textColor="@color/colorTexts"
                android:buttonTint="@color/colorAccent"/>

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Amazônia"
                android:textColor="@color/colorTexts"
                android:buttonTint="@color/colorAccent"/>

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Caatinga"
                android:textColor="@color/colorTexts"
                android:buttonTint="@color/colorAccent"/>

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pantanal"
                android:textColor="@color/colorTexts"
                android:buttonTint="@color/colorAccent"/>

        </RadioGroup>

        <android.support.design.button.MaterialButton
            android:id="@+id/btnDois"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|center_horizontal"
            android:layout_marginHorizontal="30dp"
            android:text="@string/res_responder"
            app:backgroundTint="@color/colorAccent"
            app:cornerRadius="15dp"/>

    </LinearLayout>

</FrameLayout>